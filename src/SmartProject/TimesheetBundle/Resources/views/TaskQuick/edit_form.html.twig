{{ form_start(form, {attr: {class: 'ajaxify form-horizontal' }}) }}
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.date) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.client) }}
        {{ form_row(form.project) }}
        {{ form_row(form.contract) }}
    </div>
    <div class="col-md-8">
        {{ form_row(form.description) }}
        {{ form_row(form.tags) }}
    </div>
</div>
{{ form_end(form) }}