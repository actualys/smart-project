{% extends 'SmartProjectFrontBundle::layout.html.twig' %}

{% block headline %}
    Contract creation
{% endblock %}

{% block headline_sub %}
    {% if contract.project.client %}<a href="{{ path('client_show', {slug: contract.project.client.slug}) }}">{{ contract.project.client.name }}</a> > {% endif %}
    <a href="{{ path('project_show', {slug: contract.project.slug}) }}">{{ contract.project.name }}</a>
{% endblock %}

{% block content_content %}
    {{ form(form, {action: form_action}) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('project_show', {slug: contract.project.slug}) }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}

{% block content_sidebar %}

    {% include 'SmartProjectProjectBundle:Project:sidebar.html.twig' %}

{% endblock %}